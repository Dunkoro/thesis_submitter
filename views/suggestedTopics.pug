extends layout

block layout-content
    div.View.UserView
        div.Form
            div.Title
                h1 Suggested Topics
            form.Details(method='POST' action="/student/thesis")
                div.Details
                    label(for="suggestedTopic" class="sr-only")
                    select(name="suggestedTopic" id="suggestedTopic" class="form-control")
                        each topic in suggestedTopics
                            option= topic.topicPolish + "|" + topic.topicEnglish + "|" + topic.language
                div.NavButtons
                    input(type="submit" value="Choose the topic")